{
    "name": "aidynmakhataev/laravel-events-attributes",
    "description": "Auto register event & listeners using PHP attributes",
    "keywords": [
        "laravel-events-attributes", "laravel event attributes", "laravel listener attributes", "AidynMakhataev"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Aidyn Makhataev",
            "email": "makataev.7@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/events": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-laravel": "^1.4.2",
        "vimeo/psalm": "^4.6.0"
    },
    "autoload": {
        "psr-4": {
            "AidynMakhataev\\EventsAttributes\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AidynMakhataev\\EventsAttributes\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit --colors=always",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "AidynMakhataev\\EventsAttributes\\EventsAttributesServiceProvider"
            ]
        }
    }
}
